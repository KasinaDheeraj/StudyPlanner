<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    card_view:cardBackgroundColor="#bcdfeb"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_cvsub"
            android:paddingLeft="4dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_book_outline"/>
        <TextView
            android:id="@+id/sub_cvsub"
            android:layout_toEndOf="@+id/img_cvsub"
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:textStyle="bold"
            android:maxLines="1"
            android:textSize="24sp"
            android:layout_height="36dp"
            android:paddingStart="8dp"
            android:gravity="left|center_vertical"/>
        <TextView
            android:id="@+id/teach_cvsub"
            android:layout_toEndOf="@+id/img_cvsub"
            android:layout_below="@+id/sub_cvsub"
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:maxLines="1"
            android:textSize="18sp"
            android:layout_height="36dp"
            android:paddingStart="8dp"
            android:gravity="left|center_vertical"/>
        <TextView
            android:id="@+id/note_cvsub"
            android:layout_toEndOf="@+id/img_cvsub"
            android:layout_below="@+id/teach_cvsub"
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:maxLines="1"
            android:textSize="18sp"
            android:layout_height="36dp"
            android:paddingStart="8dp"
            android:gravity="left|center_vertical"/>
            </RelativeLayout>




</androidx.cardview.widget.CardView>