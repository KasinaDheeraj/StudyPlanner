<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    card_view:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/time_cvtask"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Today"
            android:textStyle="bold" />
        <androidx.cardview.widget.CardView
            android:layout_toEndOf="@+id/time_cvtask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            card_view:cardBackgroundColor="#FFFF00"
            card_view:cardCornerRadius="8dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_cvtask"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:paddingLeft="4dp"
                    android:src="@drawable/ic_hourglass" />

                <TextView
                    android:id="@+id/sub_cvtask"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="1dp"
                    android:layout_toEndOf="@+id/img_cvtask"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/note_cvtask"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/sub_cvtask"
                    android:layout_marginTop="1dp"
                    android:layout_toEndOf="@+id/img_cvtask"
                    android:gravity="left"
                    android:textSize="24sp"
                    android:maxLines="1" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>



</androidx.cardview.widget.CardView>