<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    tools:context=".AddTaskActivity"
    android:padding="8dp">
    <TextView
        android:layout_row="0"
        android:layout_column="0"
        android:textSize="32dp"
        android:text="Add a Task"
        android:layout_columnSpan="2"/>

    <TextView
        android:id="@+id/task_sub"
        android:layout_row="1"
        android:layout_column="0"
        android:text="Subject :"
        android:textStyle="bold"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_columnWeight="20"/>
    <EditText
        android:id="@+id/task_subET"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="80"/>

    <TextView
        android:id="@+id/task_note"
        android:layout_row="2"
        android:layout_column="0"
        android:text="Note :"
        android:textStyle="bold"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_columnWeight="20"/>
    <EditText
        android:id="@+id/task_noteET"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_columnWeight="80"/>

    <TextView
        android:id="@+id/task_date"
        android:layout_row="3"
        android:layout_column="0"
        android:text="Date :"
        android:textStyle="bold"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_columnWeight="20"/>
    <Button
        android:id="@+id/task_dateButton"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_columnWeight="80"
        android:textColor="@color/black"
        android:text="Set Date"
        android:gravity="center"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <TextView
        android:layout_row="4"
        android:layout_column="0"
        android:gravity="start"
        android:text="Remainder"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_columnWeight="80"/>
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/task_switch"
        android:layout_row="4"
        android:layout_column="0"
        android:gravity="end"
        android:layout_columnWeight="80"/>

    <TextView
        android:id="@+id/task_remdate"
        android:layout_row="5"
        android:layout_column="0"
        android:text=" RemainderDate :"
        android:textStyle="bold"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_columnWeight="20"
        android:visibility="gone"/>
    <Button
        android:id="@+id/task_remdateButton"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_columnWeight="80"
        android:text="Set Date"
        android:textColor="@color/black"
        android:gravity="center"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/task_remtime"
        android:layout_row="6"
        android:layout_column="0"
        android:text=" Remainder Time :"
        android:textStyle="bold"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_columnWeight="20"
        android:visibility="gone"/>
    <Button
        android:id="@+id/task_remtimeButton"
        android:layout_row="6"
        android:layout_column="1"
        android:layout_columnWeight="80"
        android:textColor="@color/black"
        android:text="Set Time"
        android:gravity="center"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:visibility="gone"/>
    <Button
        android:layout_row="8"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_rowSpan="2"
        android:layout_gravity="fill_horizontal"
        android:gravity="center_horizontal"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:text="Save Task"
        android:textSize="18dp"
        app:strokeColor="#673AB7"/>

</GridLayout>